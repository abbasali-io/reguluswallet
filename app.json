{
  "expo": {
    "name": "Regulus Wallet",
    "description": "Regulus is an iOS crypto wallet for Stellar Lumens",
    "slug": "regulus-wallet",
    "privacy": "public",
    "sdkVersion": "25.0.0",
    "platforms": [
      "ios"
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/splash@3x.png",
      "resizeMode": "contain",
      "backgroundColor": "#d4eef7"
    },
    "ios": {
      "supportsTablet": false,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan qr codes to quickly get public addresses  ."
      }
    },
    "packagerOpts": {
      "config": "./rn-cli.config.js"
    },
    "hooks": {
      "postPublish": [
        {
          "file": "sentry-expo/upload-sourcemaps",
          "config": {
            "organization": "your organization's short name here",
            "project": "your project short name here",
            "authToken": "your auth token here"
          }
        }
      ]
    }
  }
}